<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout04"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <CheckBox
                android:id="@+id/checkzidongjiluhangji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="自动记录航迹(仅gps)"
                android:textSize="10sp" />

            <CheckBox
                android:id="@+id/checkShouhuihangji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="手绘航迹"
                android:textSize="10sp" />

            <CheckBox
                android:id="@+id/checkXianshihangji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="显示航迹"
                android:textSize="10sp" />

            <CheckBox
                android:id="@+id/checkShishicunhuangji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="定时保存（1分钟）"
                android:textSize="10sp" />

            <Button
                android:text="清除航迹"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/buttonQingchuhangji"
                android:layout_weight="1"
                android:textSize="10sp"
                android:minHeight="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="航迹编号"
                android:textSize="10sp" />

            <Spinner
                android:id="@+id/spinnerhangjibianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/hangjibianhao"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonCunchuhangji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:text="存储航迹"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonDuquhangji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:text="读取航迹"
                android:textSize="10sp" />
        </LinearLayout>



        <TextView
            android:id="@+id/textViewTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin"
            android:text="定时存储计时"
            android:textSize="10sp">
        </TextView>

        <Chronometer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chronometercunchuhangji"
            android:layout_weight="1.0"
            android:textSize="10sp" />

    </LinearLayout>

</ScrollView>